<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomboxlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_sheet_card_background">

        <Button
            android:id="@+id/LineOneButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="6dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/rounded_corner_grey_fav_shape"
            android:enabled="false"
            android:text="@string/select__select_title"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/titleButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:textSize="@dimen/font_title_size"
            android:paddingRight="10dp"
            android:enabled="false"
            android:text="@string/select__select_title"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LineOneButton" />

        <Button
            android:id="@+id/lineButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="@color/md_blue_grey_200"
            android:padding="10dp"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:textSize="@dimen/font_title_size"
            android:paddingRight="10dp"
            android:enabled="false"
            android:text="@string/select__select_title"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleButton" />

        <!-- TODO GONE this-->
        <Button
        android:visibility="gone"
        android:id="@+id/cameraButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:drawableStart="@drawable/ic_select_camera"
        android:layout_marginTop="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/camera__select_title"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineButton"  />

        <Button
            android:id="@+id/galleryButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="10dp"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/gallery__select_title"
            android:drawableStart="@drawable/ic_select_gallery"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cameraButton" />


