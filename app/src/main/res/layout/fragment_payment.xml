<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.panaceasoft.firoozboard.ui.payment.PaymentFragment">

    <TextView
        android:id="@+id/fragment_payment_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/need_payment"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_payment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_80"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="@dimen/space_80"
        android:background="@drawable/rounded_corner_shape_button_for_login"
        android:text="@string/pay"
        android:textColor="@color/text__white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/space_40"
        app:layout_constraintTop_toBottomOf="@id/fragment_payment_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>
